<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Expense Report</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      font-size: 13px;
      color: #333;
      margin: 20px;
    }
    table {
      width: 100%;
      border-collapse: collapse;
      font-size: 13px;
    }
    th, td {
      border: 1px solid #999;
      padding: 6px 8px;
      text-align: left;
    }
    th {
      background-color: #f0f0f0;
    }
    tfoot td {
      font-weight: bold;
    }
    .text-right {
      text-align: right;
    }
  </style>
</head>
<body>
  <h2 style="text-align:center;">Expense Report</h2>
  <p style="text-align:center;">
    <% if (filters.fromDate && filters.toDate) { %>
      Date Range: <%= filters.fromDate %> to <%= filters.toDate %>
    <% } else { %>
      Full Report
    <% } %>
  </p>

  <table border="1" cellpadding="5">
    <thead>
      <tr>
        <th>Date</th>
        <th>Reference No</th>
        <th>Account Type</th>
        <th>Account Name</th>
        <th>Payment Method</th>
        <th class="text-right">Amount (<%= currency %>)</th>
      </tr>
    </thead>
    <tbody>
      <% if (data.length === 0) { %>
        <tr>
          <td colspan="6" style="text-align:center;">No records found</td>
        </tr>
      <% } else { %>
        <% data.forEach(item => { %>
          <tr>
            <td><%= moment(item.createdAt).format("DD-MM-YYYY") %></td>
            <td><%= item.referenceId || '-' %></td>
            <td><%= item.accountType || '-' %></td>
            <td><%= item.accountName || '-' %></td>
            <td><%= item.paymentType || 'N/A' %></td>
            <td class="text-right"><%= item.amount?.toFixed(2) || '0.00' %></td>
          </tr>
        <% }) %>
      <% } %>
    </tbody>
    <tfoot>
      <tr>
        <td colspan="5" class="text-right">Total</td>
        <td class="text-right"><%= totalAmount?.toFixed(2) %> <%= currency %></td>
      </tr>
    </tfoot>
  </table>
</body>
</html>
