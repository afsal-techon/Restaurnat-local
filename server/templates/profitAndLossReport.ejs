<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8" />
  <title>Profit and Loss Report</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      font-size: 12px;
      color: #333;
      margin: 20px;
    }
    h2 {
      text-align: center;
      margin-bottom: 10px;
    }
    .section-title {
      font-weight: bold;
      margin-top: 15px;
      font-size: 13px;
    }
    .filters {
      margin-bottom: 15px;
      font-size: 13px;
    }
    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 5px;
    }
    th, td {
      border: 1px solid #999;
      padding: 6px 8px;
      text-align: left;
    }
    th {
      background-color: #f2f2f2;
    }
    .total-row {
      font-weight: bold;
      background-color: #f9f9f9;
    }
    .nowrap {
      white-space: nowrap;
    }
  </style>
</head>
<body>
  <h2>Profit and Loss Report</h2>

  <div class="filters">
    <% if (fromDate) { %><strong>From:</strong> <%= fromDate %><br/><% } %>
    <% if (toDate) { %><strong>To:</strong> <%= toDate %><br/><% } %>
  </div>

  <div class="section-title">Income</div>
  <table>
    <tr>
      <th>Description</th>
      <th>Amount (<%= currency %>)</th>
    </tr>
    <tr>
      <td>Sales</td>
      <td class="nowrap"><%= revenue.toFixed(2) %></td>
    </tr>
  </table>

  <div class="section-title">Cost of Goods Sold</div>
  <table>
    <tr>
      <td>Purchases</td>
      <td class="nowrap"><%= cogs.toFixed(2) %></td>
    </tr>
  </table>

  <div class="section-title">Gross Profit</div>
  <table>
    <tr>
      <td>Gross Profit</td>
      <td class="nowrap"><%= grossProfit.toFixed(2) %></td>
    </tr>
  </table>

  <div class="section-title">Operating Expenses</div>
  <table>
    <thead>
      <tr>
        <th>Expense Account</th>
        <th>Amount (<%= currency %>)</th>
      </tr>
    </thead>
    <tbody>
      <% for (const [name, amount] of Object.entries(operatingExpenses)) { %>
        <tr>
          <td><%= name %></td>
          <td class="nowrap"><%= amount.toFixed(2) %></td>
        </tr>
      <% } %>
      <tr class="total-row">
        <td>Total Operating Expenses</td>
        <td class="nowrap"><%= TotalOperatingExpenses.toFixed(2) %></td>
      </tr>
    </tbody>
  </table>

  <div class="section-title">Net Profit</div>
  <table>
    <tr class="total-row">
      <td>Net Profit</td>
      <td class="nowrap"><%= netProfit.toFixed(2) %></td>
    </tr>
  </table>
</body>
</html>
